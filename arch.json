{
    "audio": "pipewire",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "cd /home/s; git clone https://aur.archlinux.org/paru.git",
        "chown -R s:s /home/s/paru",
        "usermod -aG docker s",
        "echo 'exec awesome' >> /home/s/.xinitrc",
        "echo 'startx' >> /home/s/.zshrc",
        "sh zsh.sh s"
    ],
    "filesystem": "ext4",
    "gfx_driver": "VMware / VirtualBox (open-source)",
    "harddrive": {
        "path": "/dev/sda"
    },
    "hostname": "arch",
    "kernels": [
        "linux-zen"
    ],
    "keyboard_language": "us",
    "nic": {
        "NetworkManager": true
    },
    "ntp": true,
    "packages": ["docker", "git", "wget", "zsh", "vim", "neofetch", "htop", "openssh"],
    "profile": "budgie",
    "services": ["docker"],
    "superusers": {
        "s": {
            "!password": "arch"
        }
    },
    "sys_encoding": "en_US",
    "sys_language": "utf-8",
    "timezone": "Europe/Zurich",
    "users": {}
}